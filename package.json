{
    "name": "Pif-Paf-Pouf-Launcher",
    "productname": "Pif Paf Pouf",
    "version": "2.1.4",
    "description": "Launcher Minecraft pour le serveur Pif Paf Pouf",
    "main": "src/app.js",
    "author": {
        "name": "Pif Paf Pouf Team",
        "email": "contact@pifpafpouf.fr",
        "url": "https://github.com/julianout"
    },
    "url": "http://cdn.inoxia.me",
    "user": "",
    "scripts": {
        "start": "cross-env-shell NODE_ENV=dev electron .",
        "dev": "cross-env-shell DEV_TOOL=open nodemon --exec npm start",
        "build": "electron-builder --win",
        "deploy": "./deploy.sh",
        "icon": "node build.js --icon=https://raw.githubusercontent.com/luuxis/Selvania-Launcher/master/src/assets/images/icon.png"
    },
    "license": "CCANC",
    "nodemonConfig": {
        "ext": "js,html,css",
        "ignore": "**/test"
    },
    "dependencies": {
        "discord-rpc": "^4.0.1",
        "electron-updater": "^6.1.8",
        "minecraft-java-core": "^4.1.4",
        "node-bdd": "^2.0.4",
        "node-fetch": "^2.7.0",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "electron": "^30.5.1",
        "electron-builder": "^26.0.12",
        "javascript-obfuscator": "^4.1.0",
        "jimp": "^0.22.12",
        "nodemon": "^3.1.2",
        "png2icons": "^2.0.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/julianout/Selvania-Launcher.git"
    },
    "homepage": "https://github.com/julianout/Selvania-Launcher",
    "build": {
        "appId": "com.pifpafpouf.launcher",
        "productName": "Pif Paf Pouf Launcher",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "src/assets/images/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
